{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "types": [
      "node",
      "jest"
    ],
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
  },
  "include": [
    "./node_modules/@types/**/*",
    "./**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
    }
  }
}
